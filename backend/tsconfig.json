{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES2022",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": false,
    "moduleResolution": "node",
    "lib": ["ES2022"],
    "types": ["node"]
  },
  "include": ["src"], // Compiler soll nur Dateien in src ber√ºcksichtigen
  "exclude": ["node_modules"] // Ignoriert node_modules (eigentlich
}