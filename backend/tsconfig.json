{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": false,
    "moduleResolution": "node",
    "lib": ["ES2022"]
    // removed "types" and "typeRoots" to let TS auto-resolve installed @types
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}